    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch ClinicaDentalRP",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/ClinicaDentalRP.exe", // Asegúrate que esta ruta sea correcta
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true, // Para ver la salida en una consola externa
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\TDM-GCC-64\\bin\\gdb.exe", // Ajusta esta ruta a tu gdb.exe
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compilar_ClinicaDentalRP" // ¡IMPORTANTE! Ejecutará tu tarea de compilación antes de lanzar
        }

    ]
}